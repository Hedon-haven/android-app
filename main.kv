        orientation: "vertical"
        size: root.width, root.height
        padding: 20
        Label:
            text_size: self.size
            id: label1
            text: "Select the app icon that will be visible on your home screen"
            font_size: 20
            halign: "center"
            valign: "middle"
            size_hint: 1, None
            background_color: (0, 0, 0, 0)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
        GridLayout:
            cols: 2
            spacing: 50
            Image:
                source: "assets/app_icons/hedon.png"
                on_touch_down:
                    root.image_clicked(self) if self.collide_point(*args[1].pos) else False
            Image:
                source: "assets/app_icons/bank.png"
            Image:
                source: "assets/app_icons/bank.png"
            Image:
                source: "assets/app_icons/bank.png"
        RoundedButton:
            text: "Next"
            size_hint: 0.4, 0.1
            pos_hint: {"center_x": 0.8}
            on_release:
                app.root.current = "setup_screen_2"
                root.manager.transition.direction = "left"


