#:import hex kivy.utils.get_color_from_hex
#:import CardTransition kivy.uix.screenmanager.CardTransition
#:import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#:import NoScrollEffect kivy.effects.scroll.ScrollEffect
#:import Factory kivy.factory.Factory

<ActionPreviousButton>:
    background_color: 0,0,0,0
    background_down: ""

<ActionOverflow>:
    border: 0,0,0,0
    background_normal: ""
    background_down: ""
    background_disabled_normal: ""
    size_hint_x: 0
    minimum_width: '0sp'
    width: 0
    canvas.after:
        Color:
            rgb: 0,0,0
        Rectangle:
            pos: root.center_x - sp(16), root.center_y - sp(16)
            size: sp(0), sp(0)
            source: root.overflow_image

<ActionPrevious>:
    with_previous: True
    on_press: print('pressed_menu')
    title: ''
    previous_image: "assets/icons_misc/blank.png"
    previous_image_width: 1
    previous_image_height: 1

<MenuOverlay@ModalView>:
    id: menu_overlay
    size_hint: 0.7, 1
    pos_hint: {'x': 0, 'y': 0}
    background: ""
    background_color: hex('#1a1c19')
    BoxLayout:
        padding: 35
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            Image:
                source: "assets/app_icons/bank_select.png"
                allow_stretch: True
                keep_ratio: True
                size_hint_y: None
                width: root.width
                height: self.width / self.image_ratio
            Label:
                text: "Lewd explorer\n" + "Version: v0.0.1"
        MenuButton:
            text: "Settings"
        MenuButton:
            text: "Downloaded videos"
        MenuButton:
            text: "Report Issue"
        MenuButton:
            text: "Help"
        MenuButton:
            text: "About"

<RoundedButton@Button>
    color: hex('#182013') if self.state == 'normal' else hex('#f1f1eb')
    background_normal: ""
    background_color: (0,0,0,0)
    font_size: self.width/5
    canvas.before:
        Color:
            rgba: hex('#bcf1a9') if self.state == 'normal' else hex('#2f312c')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30]

<MenuButton@Button>
    color: hex('#ffffff')
    valign: "bottom"
    halign: "left"
    text_size: self.width, None
    background_normal: ""
    background_color: (0,0,0,0)
    font_size: self.width/15
    pos_hint: {'x': None, 'y': 1}

# TODO: Fix position of the label
<FailMessage@Label>:
    color: hex('#ffffff')
    valign: "center"
    halign: "center"
    text_size: self.width, None
    background_normal: ""
    background_color: (0,0,0,0)
    font_size: self.width/15
    text: "No search results found"

<VideoPreview@BoxLayout>:
    size_hint_y: None
    height: self.minimum_height
    orientation: "vertical"
    preview_image: ""
    title: ""
    AsyncImage:
        source: root.preview_image
        allow_stretch: True
        keep_ratio: True
        size_hint_y: None
        width: root.width
        height: self.width / self.image_ratio
    Label:
        text: root.title
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None
        bold: True
        valign: "top"
        halign: "left"
        size_hint: 1, None
        size: self.texture_size
    GridLayout:
        cols: 5
        height: self.minimum_height
        Image:
            source: "assets/icons_light/views.png"
        Label:
            text: "50"
        Image:
            source: "assets/icons_misc/blank.png"
        Image:
            source: "assets/icons_light/thumbs.png"
        Label:
            height: self.texture_size[1]
            text: "50" + " %"

<WindowManager>:
    BlankScreen:
    MainScreen:
    VideoScreen:
    SearchScreen:

    SetupScreen1:
    SetupScreen2:
    SetupScreen3:

<BlankScreen>:
    name: "blank"
    canvas.before:
        Color:
            rgba: hex('#1a1c19')
        Rectangle:
            pos: self.pos
            size: self.size

<MainScreen>:
    id: main_screen
    name: "main_screen"
    canvas.before:
        Color:
            rgba: hex('#1a1c19')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        ActionBar:
            background_image: ""
            overflow_image: ""
            background_color: hex('#86b877')
            pos_hint: {'top': 1}
            height:'55sp'
            ActionView:
                ActionPrevious:
                    app_icon: 'assets/icons_dark/menu.png'
                    on_release: Factory.MenuOverlay().open()
                ActionButton:
                    icon: "assets/icons_dark/search.png"
                    background_down: ""
                    background_color: 0,0,0,0
                    on_press:
                        root.manager.transition = CardTransition()
                        root.manager.transition.duration = 0.3
                        root.manager.transition.direction = 'up'
                        root.manager.current = 'search_screen'

        ScrollView:
            bar_width: 0
            do_scroll_x: False
            effect_cls: NoScrollEffect
            GridLayout:
                id: video_grid
                cols: 2
                padding: 10
                spacing: 10
                size_hint_y: None
                height: self.minimum_height

<SearchScreen>:
    name: "search_screen"
    canvas.before:
        Color:
            rgba: hex('#1a1c19')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        ActionBar:
            background_image: ""
            background_color: hex('#86b877')
            pos_hint: {'top': 1}
            height:'50sp'
            ActionView:
                ActionPrevious:
                    app_icon: 'assets/icons_dark/back.png'
                    on_press:
                        root.manager.transition = CardTransition()
                        root.manager.transition.duration = 0.3
                        root.manager.transition.mode = 'pop'
                        root.manager.transition.direction = 'down'
                        root.manager.current = 'main_screen'
#                ActionButton:
#                    id: search_bar_main
#                    disabled: True
#                    #background_disabled_normal: ""
#                    #background_color: (0, 0, 0, 0)
#                    size: self.width, 1
#                    text: "Busty latina"
#                    color: 0,0,0,1
                #ActionSearchInput:
                ActionButton:
                    icon: "assets/icons_dark/search.png"
                    background_down: ""
                    background_color: 0,0,0,0
                    on_press:
                        root.search()
        TextInput:
            id: search_input
            background_color: 0,0,0,0
            multiline: False
            font_color: 1,1,1,1
            focus: True
            foreground_color: hex("#ffffff")
            font_size: self.width/15


<VideoScreen>:
    name: "video_screen"
    canvas.before:
        Color:
            rgba: hex('#000000')
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Video:
            id: video_widget
            source: ""
            # TODO: make remote preview images, when kivy fixes it
            preview: ""
            state: "play"
            options: {'eos': 'stop'}
            allow_fullscreen: True
            allow_stretch: True
            keep_ratio: True
        # Grey filter for showing controls
        Widget:
            id: controls_background
            canvas:
                Color:
                    rgb: 0,0,0
                Rectangle:
                    pos: self.pos
                    size: self.size
            opacity: 0
            disabled: True

        Button:
            id: controls_play
            canvas:
                Rectangle:
                    size: (256, 256)
                    pos: (self.pos[0]+self.size[0]/2.0) - 256/2.0, (self.pos[1]+self.size[1]/2.0) - 256/2.0
                    source: "assets/icons_light/play.png" if video_widget.state == "pause" else "assets/icons_light/pause.png"
            background_color: 0,0,0,0
            size_hint: (0.2, 0.4)
            pos_hint: {"center_x" : 0.5, "center_y" : 0.5}
            opacity: 0
            disabled: True
            on_press:
                self.source = "assets/icons_light/pause.png"
                root.toggle_video()
        VideoPlayerProgressBar:
            id: controls_progress_bar
            video: video_widget
            max: max(video_widget.duration, video_widget.position, 1)
            value: video_widget.position
            disabled: True
            pos_hint: {"center_x" : 0.5, "center_y" : 0.1}
            size_hint: (0.9, 0.05)
            opacity: 0

        # This widget enables the controls
        Widget:
            id: controls_enabler
            canvas:
                Color:
                    rgba: 0,0,0,0
                Rectangle:
                    pos: self.pos
                    size: self.size
            pos_hint: {"center_x" : 0.5, "center_y" : 0.5} if not self.disabled else {"center_x" : 0.5, "center_y" : -3}
            on_touch_down: root.enable_controls()

<SetupScreen1>:
